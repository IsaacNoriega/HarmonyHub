    <div class="audio-player">
        <div class="imgPlayer">
            <img src="https://m.media-amazon.com/images/I/61hw9WloObL._UF1000,1000_QL80_.jpg" alt="">
        </div>
        <div class="nameAlbumTrackPlayer">
            <p id="nameAlbumTrackPlayerName">Cancion 1</p>
            <p id="nameAlbumTrackPlayerAlbum">The Helves Project</p>
        </div>
        <div class="midButtons">
            <div class="buttonsPlayer">
                <i class="fa-solid fa-backward"></i>
                <i class="fa-solid fa-pause"></i>
                <i class="fa-solid fa-forward"></i>
            </div>
            <div class="downButtonsPlayer">
                <p id="trackStart">00:00</p>
                <div class="progress-loader">
                    <div class="progress"></div>
                </div>
                <p id="trackEnd">12:05</p>
            </div>
            <label class="slider">
                <input type="range" class="level">
